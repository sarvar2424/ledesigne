    <script>
        // Функция переключения темы
        function toggleTheme() {
            const body = document.body;
            const currentTheme = body.getAttribute('data-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            
            body.setAttribute('data-theme', newTheme);
            
            // Обновляем иконку темы
            const themeIcon = document.getElementById('themeIcon');
            if (newTheme === 'light') {
                // Иконка солнца для светлой темы
                themeIcon.innerHTML = `
                    <circle cx="12" cy="12" r="5"/>
                    <line x1="12" y1="1" x2="12" y2="3"/>
                    <line x1="12" y1="21" x2="12" y2="23"/>
                    <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
                    <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
                    <line x1="1" y1="12" x2="3" y2="12"/>
                    <line x1="21" y1="12" x2="23" y2="12"/>
                    <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
                    <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
                `;
            } else {
                // Иконка луны для темной темы
                themeIcon.innerHTML = '<path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>';
            }
            
            // Сохраняем выбор в localStorage
            localStorage.setItem('theme', newTheme);
        }
        
        // Загружаем сохраненную тему при загрузке страницы
        window.onload = function() {
            const savedTheme = localStorage.getItem('theme') || 'dark';
            document.body.setAttribute('data-theme', savedTheme);
            
            // Устанавливаем правильную иконку
            const themeIcon = document.getElementById('themeIcon');
            if (savedTheme === 'light') {
                themeIcon.innerHTML = `
                    <circle cx="12" cy="12" r="5"/>
                    <line x1="12" y1="1" x2="12" y2="3"/>
                    <line x1="12" y1="21" x2="12" y2="23"/>
                    <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
                    <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
                    <line x1="1" y1="12" x2="3" y2="12"/>
                    <line x1="21" y1="12" x2="23" y2="12"/>
                    <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
                    <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
                `;
            }
        }
        
        // Переключение FAB меню
        function toggleFab() {
            const fab = document.getElementById('fab');
            const fabMenu = document.getElementById('fabMenu');
            
            fab.classList.toggle('open');
            fabMenu.classList.toggle('open');
        }
        
        // Отметка задачи как выполненной
        function toggleTaskCheck(checkbox) {
            checkbox.classList.toggle('checked');
            if (checkbox.classList.contains('checked')) {
                const taskCard = checkbox.closest('.task-card');
                taskCard.style.opacity = '0.6';
                showToast('✅ Задача выполнена!');
            } else {
                const taskCard = checkbox.closest('.task-card');
                taskCard.style.opacity = '1';
            }
        }
        
        // Показ toast уведомлений
        function showToast(message) {
            const toast = document.createElement('div');
            toast.className = 'toast';
            toast.textContent = message;
            document.body.appendChild(toast);
            
            setTimeout(() => {
                toast.style.animation = 'slideDown 0.3s ease';
                setTimeout(() => toast.remove(), 300);
            }, 2000);
        }
        
        // Обработчики действий
        function showTaskDetails() { showToast('📊 Открываю детали задач...'); }
        function toggleFocus() { showToast('🎯 Фокус-сессия начата'); }
        function showFinanceDetails() { showToast('💰 Открываю финансовую сводку...'); }
        function startPreparation() { showToast('🚀 Начинаю подготовку к встрече...'); }
        function showDetails() { showToast('📋 Загружаю детали...'); }
        function setLimit() { showToast('🚫 Устанавливаю лимит на вечер...'); }
        function showAnalytics() { showToast('📊 Открываю аналитику...'); }
        function showAllTasks() { showToast('📅 Показываю все задачи...'); }
        function postponeTask() { showToast('🕓 Задача отложена на 30 минут'); }
        function startFocusForTask() { showToast('🎯 Запускаю фокус для задачи...'); }
        function quickTask() { toggleFab(); showToast('📝 Создание быстрой задачи...'); }
        function quickExpense() { toggleFab(); showToast('💸 Добавление расхода...'); }
        function startQuickFocus() { toggleFab(); showToast('🎯 Запуск фокус-сессии...'); }
        function voiceInput() { toggleFab(); showToast('🎤 Слушаю...'); }
        function showSearch() { showToast('🔍 Поиск...'); }
        function showNotifications() { showToast('🔔 Уведомления'); }
